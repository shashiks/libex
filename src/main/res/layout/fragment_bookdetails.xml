<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="10dp"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layerBookDetailsCover"
        android:gravity="center"        >

        <ImageView
            android:id="@+id/imgBookDetailsCover"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/book"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lblBookDetailTitle"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:alignmentMode="alignMargins"
        android:gravity="bottom|left"
        android:layout_below="@id/layerBookDetailsCover"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:text="Title" />

    <EditText
        android:id="@+id/txtBookDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lblBookDetailTitle"
        android:layout_below="@id/layerBookDetailsCover"
        android:freezesText="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/lblBookDetailAuthor"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignStart="@id/lblBookDetailTitle"
        android:layout_below="@id/lblBookDetailTitle"
        android:gravity="bottom|left"
        android:text="Author"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:text="Author" />

    <EditText
        android:id="@+id/txtBookDetailAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBookDetailTitle"
        android:layout_toRightOf="@id/lblBookDetailAuthor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lblBookDetailPublisher"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignStart="@id/lblBookDetailAuthor"
        android:layout_below="@id/lblBookDetailAuthor"
        android:gravity="bottom|left"
        android:text="Publisher"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:text="Publisher" />

    <EditText
        android:id="@+id/txtBookDetailPublisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBookDetailAuthor"
        android:layout_toRightOf="@id/lblBookDetailPublisher"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lblBookDetailPublishYear"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignStart="@id/lblBookDetailPublisher"
        android:layout_below="@id/lblBookDetailPublisher"
        android:gravity="bottom|left"
        android:text="Publish Year"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:text="Publish Year" />

    <EditText
        android:id="@+id/txtBookDetailPublishYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBookDetailPublisher"
        android:layout_toRightOf="@id/lblBookDetailPublishYear"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/lblBookDetailNumPages"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignStart="@id/lblBookDetailPublishYear"
        android:layout_below="@id/lblBookDetailPublishYear"
        android:gravity="bottom|left"
        android:text="Total Pages"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:text="Total Pages"
        />

    <EditText
        android:id="@+id/txtBookDetailNumPages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBookDetailPublishYear"
        android:layout_toRightOf="@id/lblBookDetailNumPages"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/lblBookDetailAvgRating"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignStart="@id/lblBookDetailNumPages"
        android:layout_below="@id/lblBookDetailNumPages"
        android:gravity="bottom|left"
        android:text="Avg. Rating"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:text="Avg Rating" />

    <EditText
        android:id="@+id/txtBookDetailAvgRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBookDetailNumPages"
        android:layout_toRightOf="@id/lblBookDetailAvgRating"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/lblBookDetailMyRating"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignStart="@id/lblBookDetailAvgRating"
        android:layout_below="@id/lblBookDetailAvgRating"
        android:gravity="bottom|left"
        android:text="My Rating"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:text="My Rating" />

    <EditText
        android:id="@+id/txtBookDetailMyRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBookDetailAvgRating"
        android:layout_toRightOf="@id/lblBookDetailMyRating"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btnSaveBookDetails"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:text="Save"
        android:textColor="@color/primary"
        android:layout_below="@+id/lblBookDetailMyRating"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <Button
        android:id="@+id/btnCancelBookDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSaveBookDetails"
        android:layout_alignBottom="@+id/btnSaveBookDetails"
        android:layout_marginStart="76dp"
        android:layout_toEndOf="@+id/btnSaveBookDetails"
        android:text="Cancel"
        android:textColor="@color/primary" />


</RelativeLayout>

</ScrollView>
